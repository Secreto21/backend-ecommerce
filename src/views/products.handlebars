<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
</head>
<body>
    <h1>Lista de Productos</h1>
    <ul>
        {{#each products}}
            <li>
                <h2>{{this.title}}</h2>
                <p>Precio: ${{this.price}}</p>
                <button onclick="addToCart({{this.id}})">Agregar al carrito</button>
                <a href="/products/{{this.id}}">Ver detalles</a>
            </li>
        {{/each}}
    </ul>
    <div>
        {{#if pagination.hasPrevPage}}
            <a href="{{pagination.prevLink}}">Página Anterior</a>
        {{/if}}
        {{#if pagination.hasNextPage}}
            <a href="{{pagination.nextLink}}">Página Siguiente</a>
        {{/if}}
    </div>
    <script>
        function addToCart(productId) {
            fetch(`/api/carts/1/product/${productId}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    alert('Producto agregado al carrito');
                });
        }
    </script>
    
</body>
</html>
